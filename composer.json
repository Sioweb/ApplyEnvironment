{
    "name": "sioweb/apply_environment",
    "type": "contao-bundle",
    "description": "Setup environment Data",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Sascha Weidner",
            "homepage": "https://www.sioweb.de"
        }
    ],
    "require": {
        "php": "^7.1",
        "sioweb/ccevent": "*",
        "contao/core-bundle": "^4.6"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Sioweb\\ApplyEnvironment\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "contao-manager-plugin": "Sioweb\\ApplyEnvironment\\ContaoManager\\Plugin"
    },
    "scripts": {
        "post-install-contao": [
            "sh vendor/bin/contao-console sioweb:add:git https://github.com/Sioweb/ApplyEnvironment sioweb/apply_environment"
        ],
        "post-update-contao": [
            "sh vendor/bin/contao-console sioweb:add:git https://github.com/Sioweb/ApplyEnvironment sioweb/apply_environment"
        ]
    }
}
